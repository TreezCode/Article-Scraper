
{{!-- Navbar Start --}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark custom-navbar mb-3">
    <a class="navbar-brand" href="#">
        <img class="img-fluid logo" src="/img/leaflyLogo.png" alt="Leafly Logo" style="width: 50px">
        <span class="brand-text"> Leafly Scraper</span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse text-center mr-auto" id="navbarNavAltMarkup">
        <div class="navbar-nav ml-auto">
        <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="/saved">Saved</a>
        </div>
    </div>
</nav>
{{!-- Navbar End --}}

{{!-- Main Container Start --}}
<div class="container">

    <div class="jumbotron text-white bg-dark pb-5">
        <h2 class="display-4 text-center">Browse Articles</h2>
        <hr>
        <div class="btn-wrap text-center">
            <a class="btn btn-md btn-primary mx-2" id="scrape-btn" href="/scrape">Scrape Articles</a>
            <a class="btn btn-md btn-primary mx-2" id="clear-btn" href="/clear">Clear Articles</a>
        </div>
    </div>


    {{#each articles}}

        {{!-- Article Start --}}
        <div class="card text-white bg-dark pt-3 my-3">
            <div class="row justify-row m-0">
                <div class="card-header bg-dark col-md-5">
                    <img class="img-fluid article-img" src="{{this.image}}" alt="Article Thumbnail">
                    <hr>
                    <span class="byline">{{this.byline}}</span>  
                </div>
                <div class="card-body article-body text-dark bg-white col-md-6 d-flex flex-column">
                    <h3 class="card-title text-center py-2">{{this.title}}</h3>
                    <div class="card-text px-2">{{this.summary}}</div>
                </div>
            </div>
            <div class="row m-0">
                <div class="card-footer bg-dark col-md-6 d-flex justify-content-around ml-auto pt-0">
                    <a class="view-btn" href="{{this.link}}" target="_blank">View Article</a>
                    <a class="save-btn" href="" data-id="{{this.id}}">Save Article</a>
                </div>
            </div>
        </div>
        {{!-- Article End --}}
    {{/each}}

    {{!-- No Articles Display Start --}}
    {{#unless articles.length}}
        <div class="jumbotron text-white bg-dark pb-5">
            <hr>
            <h3 class="display-5 display-custom text-center">Try Scraping Articles</h3>
            <hr>
        </div>
    {{/unless}}
    {{!-- No Articles Display End --}}

</div>
{{!-- Main Container End --}}

{{!-- Scripts --}}
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/app.js"></script>